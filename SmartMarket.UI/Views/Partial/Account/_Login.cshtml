@model SmartMarket.BLL.ViewModels.LoginModel

@using (Ajax.BeginForm("Login", "Account", new AjaxOptions
        {
            HttpMethod = "Post",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "login-block"
}))
{

    <div class="profile-container-wrapper ">
        <div class="profile-item">
            <div class="profile-label">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="profile-textbox">
                @Html.TextBoxFor(model => model.Email, new { @class = "text-box single-line" })
            </div>
        </div>
    </div>

    <div class="profile-container-wrapper">
        <div class="profile-item">
            <div class="profile-label">
                @Html.LabelFor(model => model.Password)
            </div>
            <div class="profile-textbox">
                @Html.PasswordFor(model => model.Password, new { @class = "text-box single-line" })
            </div>
        </div>
    </div>
    <div class="profile-container-wrapper">
        <input type="submit" id="loginButton" value="@Model.LoginTextButton" class="submit-button">
    </div>
    <div class="profile-container-wrapper">
        <div class="profile-item">
            <div class="profile-label">
                @Html.ValidationSummary()
            </div>
        </div>
    </div>
}



